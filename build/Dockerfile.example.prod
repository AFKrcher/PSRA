# Pull base image.
FROM node:14

# Create app directory
RUN mkdir -p /app

# Copy meteor build bundle
COPY bundle /app

# Build for the image
RUN cd /app/programs/server && npm install --production
RUN	export ROOT_URL=url
RUN export MONGO_URL=url
RUN	export MAIL_URL=url

EXPOSE 3000

# Final run command
CMD ["node main.js"]